{% import "_includes/forms" as forms %}

<fieldset>
  {% if linkType.name != 'custom' %}
    {{ forms.checkboxField({
      label:   'Disable {elementName} input validation'|t('linkfield', { 'elementName': linkType.displayName }),
      id:      'disableValidation',
      name:    'disableValidation',
      checked: linkType.disableValidation,
    })}}
  {% endif %}

  {{ forms.checkboxField({
    label:   'Allow aliases and environment variables'|t('linkfield'),
    id:      'allowAliases',
    name:    'allowAliases',
    checked: linkType.allowAliases,
  })}}
</fieldset>
